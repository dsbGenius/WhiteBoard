<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

        <FrameLayout
            android:id="@+id/controlLayout"
            android:layout_width="wrap_content"

            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/gray">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gray"
                android:orientation="vertical">


                <ImageView style="@style/control_btn" />

                <ImageView
                    android:id="@+id/btn_stroke"
                    style="@style/control_btn"
                    android:padding="@dimen/control_btn_padding"
                    android:src="@drawable/stroke_type_rbtn_draw_checked" />

                <ImageView
                    android:id="@+id/btn_eraser"
                    style="@style/control_btn"
                    android:alpha="0.4"
                    android:src="@drawable/ic_eraser" />

                <ImageView
                    android:id="@+id/btn_undo"
                    style="@style/control_btn"
                    android:alpha="0.4"
                    android:src="@drawable/ic_undo" />

                <ImageView
                    android:id="@+id/btn_redo"
                    style="@style/control_btn"
                    android:alpha="0.4"
                    android:src="@drawable/ic_redo" />

                <ImageView style="@style/control_btn" />

                <ImageView
                    android:id="@+id/btn_photo"
                    style="@style/control_btn"
                    android:src="@drawable/ic_photo" />

                <ImageView
                    android:id="@+id/btn_background"
                    style="@style/control_btn"
                    android:src="@drawable/ic_background" />

                <ImageView
                    android:id="@+id/btn_drag"
                    style="@style/control_btn"
                    android:alpha="0.4"
                    android:src="@drawable/ic_drag" />

                <ImageView style="@style/control_btn" />

                <ImageView
                    android:id="@+id/btn_save"
                    style="@style/control_btn"
                    android:src="@drawable/ic_file" />

                <ImageView
                    android:id="@+id/btn_empty"
                    style="@style/control_btn"
                    android:src="@drawable/ic_empty" />

                <ImageView style="@style/control_btn" />
            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/controlLayout"
            android:background="#efeded">

            <include layout="@layout/include_draw_content_layout" />

            <include layout="@layout/include_grid_view_layout" />
        </FrameLayout>

    </RelativeLayout>
